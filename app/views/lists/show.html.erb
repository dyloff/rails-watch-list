<div class="container mt-3">
  <ul>
    <h1> <%= @list.name%></h1>
    <hr>
    <% @list.movies.each do |movie| %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= movie.rating%>/5</h5>
        <h5 class="card-title"><%= movie.title%>/5</h5>
        <hr>
        <p class="card-text"><%= movie.overview %></p>
      </div>
    </div>
    <% end %>
  </ul>
</div>
<button class="btn btn-outline-danger mt-6 pl-5"><%= link_to "Add a new bookmark", new_list_bookmark_path(@list) %></button>
</div>
