

<h1>Your playlists</h1>

<ul class="list-group list-group-flush">
  <% @lists.each do |list| %>
    <hr>
    <li class="list-group-item"><%= link_to list.name, list_path(list)%></li>
  <% end %>
    <button class="btn btn-outline-dark mt-4 pl-5"><%= link_to "Add a new list", new_list_path %></button>
</ul>





